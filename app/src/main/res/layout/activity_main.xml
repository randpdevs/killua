<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/calcOffTextView"

        android:textColor="#ffffff"
        android:textSize="95dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameDisplayTextView"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logoutButton"
                android:layout_gravity="right|center_vertical"
                android:visibility="invisible"
                android:onClick="logoutButtonFunction"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/playButton"
            android:onClick="playButtonFunction"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settingsButton"
            android:onClick="settingsButtonFunction"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/LLButton"
            android:onClick="LLButtonFunction"/>

        <Button
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registerButton"
            android:onClick="registerButtonFunction"/>
    </LinearLayout>

</LinearLayout>